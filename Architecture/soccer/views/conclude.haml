#polls
  %h3 Conclude current Poll
  %p
    Fill in the results of the current poll
  %br
  %br
  %form{action: "/conclude", method: "post"}
    %table
      -locals[:matches].each_with_index do |m, i|
        %tr
          %td="Match #{i + 1}: Result?&nbsp;&nbsp;&nbsp;"
          %td
            %select{name: "match_#{i}"}
              %option{value: 0}="Tie"
              %option{value: 1}=m[0]
              %option{value: 2}=m[1]
    %span
      %a{class: "btn btn-danger"}(href='/polls')
        Cancel 
    %input{class: "btn btn-success", type: "submit", value: "Done"}
